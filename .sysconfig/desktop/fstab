# /etc/fstab: static file system information
#
# <file system>        <dir>         <type>    <options>          <dump> <pass>

# Root fs
LABEL=ArchRoot / ext4 defaults,barrier=0,noatime,nodiratime 0 0

# Mount special entries (/dev/..)
none                   /dev/pts      devpts    defaults            0      0
none                   /dev/shm      tmpfs     defaults            0      0

# Opticals
/dev/dvd /mnt/dvd   udf   ro,user,noauto,unhide   0      0

# Mount /tmp on tmpfs 
none /tmp tmpfs defaults,noatime,nodiratime 0 0

# Boot directory
LABEL=Boot /boot ext4 defaults,noatime,nodiratime 0 0 

# User directories
LABEL=Home /home ext4 defaults,barrier=0,noatime,nodiratime 0 0
LABEL=Opt /opt ext4 defaults,barrier=0,noatime,nodiratime 0 0

# Data partitions
LABEL=Data-2 /mnt/data-2 ext4 defaults,barrier=0,noatime,nodiratime 0 0
LABEL=Data-3 /mnt/data-3 ext4 defaults,barrier=0,noatime,nodiratime 0 0
LABEL=Data-4 /mnt/data-4 ext4 defaults,barrier=0,noatime,nodiratime 0 0

# Pacman database
/var/lib/pacman.db /var/lib/pacman ext2 defaults,loop,noatime 0 0

# Data union partition
#### mhddfs union:
#mhddfs#/mnt/data-4,/mnt/data-3,/mnt/data-2 /data fuse defaults,noatime,allow_other 0 0

#### aufs union
#data /data aufs br:/mnt/data-4=rw:/mnt/data-3=rw:/mnt/data-2=rw,create=mfs 0 0

#### unionfs-fuse union
/usr/sbin/unionfs#/mnt/data-4=RW:/mnt/data-3=RW:/mnt/data-2=RW /data fuse noatime,user 0 0

# iRiver
/dev/disk/by-id/usb-iriver_S10-0:0 /mnt/iriver auto rw,user,noauto 0 0

# UsbData
/dev/disk/by-label/USBData /mnt/data-usb auto rw,user,noauto 0 0
