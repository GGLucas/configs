#!/bin/bash
#
# /etc/rc.local.shutdown: Local shutdown script.
#

echo ">> Syncing filesystem"
sync

echo ">> Unmounting union mount"
umount -l /data

echo ">> Unmounting squashed directories"
umount -l /lib
umount -l /squashed/lib/ro

umount -l /lib64
umount -l /squashed/lib64/ro

umount -l /bin
umount -l /squashed/bin/ro

umount -l /sbin
umount -l /squashed/sbin/ro

umount -l /usr
umount -l /squashed/usr/ro

