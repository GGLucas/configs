#!/bin/zsh

### Common options
del="--delete"
exc="--exclude-from=$HOME/.rsync_exclude"

### Glacicle
## Project website directories
RSYNC_projects="$del $exc /data/web/projects/ root@glacicle.org:/srv/www/projects"

### Zorgberaad
## Zorgberaadmh.nl website
RSYNC_zorgberaadmh="$del $exc /data/web/zorgberaad/website/_site/ root@glacicle.org:/srv/www/zorgberaad/website"

## New followe system
RSYNC_followe="$del $exc /data/web/followe/ root@glacicle.com:/srv/www/zorgberaad/followe"

## Old followe system
RSYNC_followe_old="$del $exc /data/web/followe_old/ root@glacicle.org:/srv/www/zorgberaad/followe_old"

### Heresy
RSYNC_heresy_core="$del $exc /data/projects/heresy/repo/core/x86_64/ heresy@hereticlinux.org:/www/heresy/repo/core/x86_64"
RSYNC_heresy_cake="$del $exc /data/projects/heresy/repo/cake/x86_64/ heresy@hereticlinux.org:/www/heresy/repo/cake/x86_64"
