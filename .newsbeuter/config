# Settings
auto-reload yes
reload-time 30
reload-threads 5
refresh-on-startup yes
text-width 78
always-display-description true
browser "fxs :0.0 %u"
save-path "~/Articles"

# Keybindings
bind-key j down
bind-key k up
bind-key l open
bind-key ] pagedown
bind-key [ pageup

# Quit bindings
bind-key h quit filebrowser
bind-key h quit help
bind-key h quit articlelist
bind-key h quit article
bind-key h quit tagselection
bind-key h quit filterselection
bind-key h quit urlview
bind-key h quit podbeuter

# Colors
color listnormal white black
color listfocus yellow magenta bold
color background white black
color info yellow blue bold
color article white black

# Highlights
highlight article "^(Feed|Title|Author|Link|Date):.*$" cyan black
highlight article "https?://[^ ]+" red black

notify-program "notify-send"
