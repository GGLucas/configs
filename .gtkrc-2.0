include "/home/archlucas/.themes/AdaptedGlossy/gtk-2.0/gtkrc"

style "user-font" {
#	font_name = "Terminus 9" 
    font_name = "Bitstream Vera Sans 8"
}

widget_class "*" style "user-font"

#gtk-font-name="Terminus 9"
gtk-font-name="Bitstream Vera Sans 8"

gtk-theme-name = "Adapted Glossy"

gtk-icon-theme-name = "Tango"

gtk-toolbar-style = GTK_TOOLBAR_BOTH_HORIZ

gtk-cursor-theme-name = "Vanilla-DMZ-AA"
gtk-cursor-theme-size = 22

style "no-resize-handle"
{
    GtkWindow::resize-grip-height = 0
    GtkWindow::resize-grip-width = 0
}

class "GtkWidget" style "no-resize-handle"

style "vimfix" {
  bg[NORMAL] = "#242424" # this matches my gvim theme 'Normal' bg color.

}
widget "vim-main-window.*GtkForm" style "vimfix"
