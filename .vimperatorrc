" Show tabline only with more than one tab
set showtabline=1

" Unfocus textfields
set focuscontent

" Incremental search
set incsearch

" Smartcase
set smartcase

" Default search
set ds=g

" Default GUI options
set go=n

" Leader
let mapleader=","

" Show/hide toolbars
noremap <silent> <C-+> :set go+=Bm<CR>
noremap <silent> <C-=> :set go-=Bm<CR>

" Next/Prev Tab
noremap <silent> gp :tabprev<CR>
noremap <silent> gn :tabnext<CR>
map gb gp

noremap <silent> v :tabprev<CR>
noremap <silent> w :tabnext<CR>

noremap <silent> V :tabmove -1<CR>
noremap <silent> W :tabmove +1<CR>

" Stumble
noremap <silent> <Leader>; :javas stumble()<CR>
noremap <silent> <Leader>, :javas su_rate(1, false, false, false)<CR>
noremap <silent> <Leader>. :javas su_rate(0, false, false, false)<CR>

" Noscript
noremap <silent> <Leader>s :noscript toggleperm<CR>
noremap <silent> <Leader>S :noscript toggletemp<CR>
noremap <silent> <Leader>t :noscript popup<CR>

" Hint font size
hi -append Hint font-size: 12px;

" Faster scrolling
noremap <C-e> 3<C-e>
noremap <C-y> 3<C-y>

noremap h 2h
noremap j 2j
noremap k 2k
noremap l 2l

" Remove tabs
noremap <silent> <leader>D :removetabsright<CR>
noremap <silent> <leader>d :removetabsleft<CR>

" Command line cursor keys
cnoremap <C-h> <Left>
cnoremap <C-l> <Right>
cnoremap <C-x> <Right><BS>
cnoremap <C-j> <Down>
cnoremap <C-k> <Up>

" Vim editting in textareas
set noinsertmode

" F7: Search highlight toggle
map <F7> :noh<CR>

" Ignore body onclick
set hinttags="//*[name()!='BODY' and @onclick or @onmouseover or @onmousedown or @onmouseup or @oncommand or @class='lk' or @class='s'] | //input[not(@type='hidden')] | //a | //area | //iframe | //textarea | //button | //select | //xhtml:*[name()!='BODY' and @onclick or @onmouseover or @onmousedown or @onmouseup or @oncommand or @class='lk' or @class='s'] | //xhtml:input[not(@type='hidden')] | //xhtml:a | //xhtml:area | //xhtml:iframe | //xhtml:textarea | //xhtml:button | //xhtml:select"

" vim:syn=vimperator:
