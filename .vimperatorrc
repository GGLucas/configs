" Editor
set editor=g

" Show tabline only with more than one tab
set showtabline=1

" Unfocus textfields
set focuscontent

" Incremental search
set incsearch

" Smartcase
set smartcase

" Default search
set ds=gg

" Default GUI options
set go=n

" Leader
let mapleader=","

" Show/hide toolbars
noremap <silent> <C-+> :set go+=Bm<CR>
noremap <silent> <C-=> :set go-=Bm<CR>

" Next/Prev Tab
noremap <silent> gp :tabprev<CR>
noremap <silent> gn :tabnext<CR>
noremap <silent> <Esc>h :tabprev<CR>
noremap <silent> <Esc>l :tabprev<CR>
noremap gb gp

" Planet page
noremap <silent> gH :tabopen http://me.glacicle.com:81/planet<CR>
noremap <silent> gh :open http://me.glacicle.com:81/planet<CR>

" Stumble
noremap <silent> <Leader>; :javas stumble()<CR>
noremap <silent> <Leader>, :javas su_rate(1, false, false, false)<CR>
noremap <silent> <Leader>. :javas su_rate(0, false, false, false)<CR>

" Noscript
noremap <silent> <Leader>s :noscript toggleperm<CR>
noremap <silent> <Leader>S :noscript toggletemp<CR>
noremap <silent> <Leader>t :noscript popup<CR>

" Hint font size
hi -append Hint font-size: 12px;

" Faster scrolling
noremap <C-e> 3<C-e>
noremap <C-y> 3<C-y>

noremap h 3h
noremap j 3j
noremap k 3k
noremap l 3l

" Command line cursor keys
cnoremap <C-H> <Left>
cnoremap <C-L> <Right>
cnoremap <C-X> <Delete>
cnoremap <C-J> <Down>
cnoremap <C-K> <Up>
cnoremap <Esc>j <Down>
cnoremap <Esc>k <Up>
cnoremap <Esc>c <C-c>:

" F7: Search highlight toggle
map <F7> :noh<CR>

" vim:syn=vimperator:
