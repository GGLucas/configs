" Editor
set editor=g

" Show tabline only with more than one tab
set showtabline=1

" Unfocus textfields
set focuscontent

" Incremental search
set incsearch

" Smartcase
set smartcase

" Leader
let mapleader=","

" Show/hide toolbars
map <C-]> <Escape>:set go=b<Return><Escape>
map <C-+> <Escape>:set go=bm<Return><Escape>
map <C-=> <Escape>:set go=<Return><Escape>

" Next/Prev Tab
map gp <Escape>:tabprev<Return><Escape>
map gn <Escape>:tabnext<Return><Escape>
map gb gp

map gH <Escape>:tabopen http://me.glacicle.com:81/planet<Return><Escape>
map gh <Escape>:open http://me.glacicle.com:81/planet<Return><Escape>

" Stumble
map <Leader>; <Esc>:javas stumble()<CR><Esc>
map <Leader>, <Esc>:javas su_rate(1, false, false, false)<CR><Esc>
map <Leader>. <Esc>:javas su_rate(0, false, false, false)<CR><Esc>

" Faster scrolling
noremap <C-e> 3<C-e>
noremap <C-y> 3<C-y>

noremap j 3j
noremap k 3k

" Comics
map <Leader>comics <Esc>:tabopen cad<CR>:tabopen egs<CR>:tabopen pa<CR>:tabopen du<CR>:tabopen da<CR>:tabopen smbc<CR>:tabopen dilbert<CR>:tabopen jenny<CR>:tabopen sinfest<CR>:tabopen ts<CR>:tabopen el<CR>:tabopen f@<CR>:tabopen geek<CR>:tabopen oots<CR>:tabopen erf<CR>:tabopen vgcats<CR>:tabopen xkcd<CR>

" F7: Search highlight toggle
map <F7> :noh<CR>

" vim: set syn=vimperator:
