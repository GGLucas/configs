" Editor
set editor=g

" Show tabline only with more than one tab
set showtabline=1

" Unfocus textfields
set focuscontent

" Incremental search
set incsearch

" Smartcase
set smartcase

" Default search
set ds=gg

" Default GUI options
set go=n

" Leader
let mapleader=","

" Show/hide toolbars
map <C-]> <Escape>:set go+=B<Return><Escape>
map <C-+> <Escape>:set go+=Bm<Return><Escape>
map <C-=> <Escape>:set go-=Bm<Return><Escape>

" Next/Prev Tab
map gp <Escape>:tabprev<Return><Escape>
map gn <Escape>:tabnext<Return><Escape>
map gb gp

" Planet page
map gH <Escape>:tabopen http://me.glacicle.com:81/planet<Return><Escape>
map gh <Escape>:open http://me.glacicle.com:81/planet<Return><Escape>

" Stumble
map <Leader>; <Esc>:javas stumble()<CR><Esc>
map <Leader>, <Esc>:javas su_rate(1, false, false, false)<CR><Esc>
map <Leader>. <Esc>:javas su_rate(0, false, false, false)<CR><Esc>

" Noscript
map <Leader>s <Esc>:noscript toggleperm<CR><Esc>
map <Leader>S <Esc>:noscript toggletemp<CR><Esc>
map <Leader>t <Esc>:noscript popup<CR><Esc>

" Faster scrolling
noremap <C-e> 3<C-e>
noremap <C-y> 3<C-y>

noremap h 3h
noremap j 3j
noremap k 3k
noremap l 3l

" F7: Search highlight toggle
map <F7> :noh<CR>

" vim:syn=vimperator:
