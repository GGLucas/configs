# Aliases
[alias]
compile = base makepkg
makepkg = base makepkg
install = base install
edit = base edit
copy = base copy
builddir = base builddir
aur install = aur info ; aur download ; base validate ; base makepkg ; base install << 

# aurshell upgrade
upgrade = aur download ; base validate ; base makepkg ; base install << aurshell-git

# Pacman-like commands
-Ss = aur search
Ss  = aur search
-S  = aur download ; base validate ; base makepkg ; base install << 
S   = aur download ; base validate ; base makepkg ; base install << 
-Si = aur info
Si  = aur info
-Sw = aur download
Sw  = aur download
-Su = aur upgrade
Su  = aur upgrade

#base configuration option
[base]
use_colors = True
history_file = ~/.aurshell_history
history_length = 500
build_dir = ~/sources
install_cmd = sudo pacman -U 
compile_cmd = makepkg -f
editor = vim
cmd_separator = ;
arguments_pipe = <<
mark_searchword = RED
abs_path = /var/abs
page_downloader = lynx -dump 

shell_prompt = #{BOLD} aurshell #{BLUE}# #{NONE}
