! Map caps to escape
remove Lock = Caps_Lock
keysym Escape = Caps_Lock
keysym Caps_Lock = Escape

! Make the grave key work
keycode 21 = numbersign grave
keycode 118 = Insert
keycode 105 = Control_R
add control = Control_R

! Fix Super_L
keycode 133 = Super_L
remove mod1 = Super_L
remove mod4 = Meta_L

! Arrow keys
keycode 113 = Left
keycode 114 = Right
keycode 111 = Up
keycode 116 = Down
