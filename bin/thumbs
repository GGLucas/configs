#!/bin/bash
bcurrent=`gconftool-2 -g /apps/nautilus/preferences/show_image_thumbnails`

if [ "$bcurrent" = "never" ]; then
	gconftool-2 --type string --set /apps/nautilus/preferences/show_image_thumbnails "local_only"
	echo "Thumbnails set to local_only"
fi

if [ "$bcurrent" = "local_only" ]; then
	gconftool-2 --type string --set /apps/nautilus/preferences/show_image_thumbnails "never"	
	echo "Thumbnails set to never"
fi

read t
