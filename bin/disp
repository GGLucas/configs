#!/bin/bash

if [[ "$1" == "" ]];
then
    PTS=`/usr/bin/tty | /bin/sed "s/\/dev\/pts\///"`
    urxvt -e "fish" -c "disp $PTS" &
    exit 0
else
    PTS=$1
fi;


PID=`/usr/bin/pgrep -nt "pts/$PTS"`
PATH=`/usr/bin/pwdx $PID | /bin/sed "s/.*: //"`

echo $PID
echo $PATH

while true;
do
    PID=`/usr/bin/pgrep -nt "pts/$PTS"`
    PATH=`/usr/bin/pwdx $PID | /bin/sed "s/.*: //"`
    #/usr/bin/clear
    echo $PATH
    #/bin/ls -a --color=always $PATH
    /bin/sleep 1 
done
