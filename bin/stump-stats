#!/usr/bin/env python2.6
import os

load = " ".join(open("/proc/loadavg").readline().split()[:3])

with os.popen("free -m") as fl:
    fl.readline()
    fl.readline()
    mem = fl.readline().split()
    mem = "%s/%s" % (mem[2], mem[3])

with os.popen("top -b -n 1") as fl:
    fl.readline()
    fl.readline()
    cpu = fl.readline().split()
    cpu = "%s %s" % (cpu[1][:-1], cpu[2][:-1])

os.system("notify-send 'Load: %s | Mem: %s | CPU: %s'" % (load, mem, cpu))
