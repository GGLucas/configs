#!/usr/bin/env python2.6
import sys
import time

decims = 3

tm = time.localtime()
ks = (tm.tm_hour*3600+tm.tm_min*60+tm.tm_sec)/1000.0

if len(sys.argv) > 1:

    if sys.argv[1][0] == "+":
        time = sys.argv[1][1:]

        if ":" in time:
            time = time.split(":")
        elif "." in time:
            time = time.split(".")
        else:
            time = (time[:2], time[2:])

        ks = (int(time[0])*3600+int(time[1])*60)/1000.0

        if len(sys.argv) > 2:
            decims = int(sys.argv[2])
    elif sys.argv[1][0] == "%":
        s = float(sys.argv[1][1:])*1000.0
        hours = int(s / 3600)
        mins = int((s-(hours*3600)) / 60)
        secs = s - hours*3600 - mins*60

        print("%d:%d:%d" % (hours, mins, secs))
        exit()
    else:
        decims = int(sys.argv[1])

## Print time
ks = round(ks, decims)

if decims == 0:
    ks = int(ks)

out = str(ks)

if ks < 10:
    out = "0"+out

if decims:
    if len(out) < decims+3:
        out += "0"*((decims+3)-len(out))

print(out)
