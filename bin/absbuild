#    read build
#    if "$build"=="y" or "$build"=="Y" or "$build"==""
#        echo "--- Building package ---"
#        makepkg -f
#        echo ">> Install package ? [Y/n]"
#        read install
#        if "$install"=="y" or "$install"=="Y" or "$install"==""
#            sudo pacman -Up $1*.pkg.tar.gz
#        end
#    end


