#!/bin/bash
echo "--- Searching for package: $1---"
ABSPATH=`find /var/abs -type d -name $1`
echo ":: Found: $ABSPATH"
echo "--- Copying to $HOME/sources/abs/$1 ---"
mkdir -p ~/sources/abs/$1
cp -R $ABSPATH/* ~/.abs/$1
echo ":: Done"
cd ~/sources/abs/$1
echo ">> Edit PKGBUILD with vim? [Y/n]"
    
read edit
if [[ "$edit" == "y" || "$edit" == "Y" or "$edit" == "" ]]
then
    vim PKGBUILD
fi
    
